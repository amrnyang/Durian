<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.swing.sky.tiku.framework.solr.dao.QuestionDAO">
    <resultMap id="BaseResultMap" type="com.swing.sky.tiku.framework.solr.entity.Question">
        <id column="id" jdbcType="BIGINT" property="tiQuestionId"/>
        <result column="course_id" jdbcType="BIGINT" property="tiQuestionCourseId"/>
        <result column="course_name" jdbcType="VARCHAR" property="tiCourseCourseName"/>
        <result column="review_point" jdbcType="VARCHAR" property="tiQuestionReviewPoint"/>
        <result column="content" jdbcType="VARCHAR" property="tiQuestionContent"/>
        <result column="question_type" jdbcType="CHAR" property="tiQuestionQuestionType"/>
    </resultMap>
    <select id="listAllQuestions" resultMap="BaseResultMap">
        SELECT
        ti_question.id,
        course_id,
        review_point,
        content,
        question_type,
        course_name
        FROM
        ti_question
        INNER JOIN
        ti_course
        ON
        ti_question.course_id = ti_course.id
        WHERE ti_question.audit_status='B'
    </select>


</mapper>





















